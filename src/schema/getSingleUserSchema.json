{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties" : {
    "data" : {
      "type" : "object",
      "properties" : {
        "id" : {
          "type" : "integer",
          "minimum" : 1,
          "maximum" : 100
        },
        "email" : {
          "type" : "string",
          "minLength" : 0,
          "maxLength" : 300
        },
        "first_name" : {
          "type" : "string",
          "minLength" : 0,
          "maxLength" : 300
        },
        "last_name" : {
          "type" : "string",
          "minLength" : 0,
          "maxLength" : 300
        },
        "avatar" : {
          "type" : "string",
          "minLength" : 0,
          "maxLength" : 300
        }
      },
      "required" : [
        "id",
        "email",
        "first_name",
        "last_name",
        "avatar"
      ]
    },
    "support" : {
      "type" : "object",
      "properties" : {
        "url" : {
          "type" : "string",
          "minLength" : 0,
          "maxLength" : 300
        },
        "text" : {
          "type" : "string",
          "minLength" : 0,
          "maxLength" : 300
        }
      },
      "required" : [
        "url",
        "text"
      ]
    }
  },
  "required": [
    "data",
    "support"
  ]
}