{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties" : {
        "page" : {
        "type":"integer",
        "minimum" : 1,
        "maximum" : 100
    },
    "per_page" : {
        "type":"integer",
        "minimum" : 1,
        "maximum" : 100
    },
    "total" : {
        "type":"integer",
        "minimum" : 1,
        "maximum" : 100
    },
    "total_pages" : {
        "type":"integer",
        "minimum" : 1,
        "maximum" : 100
    },
    "data" : {
        "type":"array",
        "minItems" : 1,
        "maxItems" : 100,
        "items" : {
            "anyOf" : [
                {
                    "type" : "object",
                    "properties" : {
                        "id" : {
                            "type":"integer",
                            "minimum" : 1,
                            "maximum" : 100
                        },
                        "name" : {
                            "type" : "string",
                            "minLength" : 0,
                            "maxLength" : 300
                        },
                        "year" : {
                            "type" : "integer",
                            "minLength" : 0,
                            "maxLength" : 100
                        },
                        "color" : {
                            "type" : "string",
                            "minLength" : 0,
                            "maxLength" : 300
                        },
                        "pantone_value" : {
                            "type" : "string",
                            "minLength" : 0,
                            "maxLength" : 300
                        }
                    },
                    "required" : [
                        "id",
                        "name",
                        "year",
                        "color",
                        "pantone_value"
                    ]
                }
            ]
        }
    }
},
"required": [
    "page",
    "per_page",
    "total",
    "total_pages",
    "data"
]
}